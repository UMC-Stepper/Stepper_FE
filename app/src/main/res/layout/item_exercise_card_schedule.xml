<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/shape_rounded_square_purple700_18dp"
        android:backgroundTint="@color/Purple_Black_BG_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_exercise_card_schedule_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="매주 화요일, 목요일"
                android:textColor="@color/White"
                style="@style/body_medium_12"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/item_exercise_card_schedule_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="07:00"
                android:textColor="@color/White"
                style="@style/title_semi_bold_24"
                app:layout_constraintTop_toBottomOf="@+id/item_exercise_card_schedule_day_tv"
                app:layout_constraintStart_toStartOf="@+id/item_exercise_card_schedule_day_tv"/>

            <TextView
                android:id="@+id/item_exercise_card_schedule_am_pm_tv"
                style="@style/body_medium_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:text="오후"
                android:textColor="@color/White"
                app:layout_constraintBottom_toBottomOf="@+id/item_exercise_card_schedule_time_tv"
                app:layout_constraintStart_toEndOf="@+id/item_exercise_card_schedule_time_tv"
                app:layout_constraintTop_toTopOf="@+id/item_exercise_card_schedule_time_tv" />

            <TextView
                android:id="@+id/item_exercise_card_category_tv"
                style="@style/body_medium_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="어깨 운동"
                android:textColor="@color/White"
                app:layout_constraintStart_toStartOf="@+id/item_exercise_card_schedule_time_tv"
                app:layout_constraintTop_toBottomOf="@+id/item_exercise_card_schedule_time_tv" />

            <TextView
                android:id="@+id/item_exercise_card_pipe_tv"
                style="@style/body_medium_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="|"
                android:textColor="@color/White"
                app:layout_constraintBottom_toBottomOf="@+id/item_exercise_card_category_tv"
                app:layout_constraintStart_toEndOf="@+id/item_exercise_card_category_tv"
                app:layout_constraintTop_toTopOf="@+id/item_exercise_card_category_tv" />
            <TextView
                android:id="@+id/item_exercise_card_materials_tv"
                style="@style/body_medium_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="준비물: 운동밴드"
                android:textColor="@color/White"
                app:layout_constraintBottom_toBottomOf="@+id/item_exercise_card_pipe_tv"
                app:layout_constraintStart_toEndOf="@+id/item_exercise_card_pipe_tv"
                app:layout_constraintTop_toTopOf="@+id/item_exercise_card_pipe_tv" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/item_exercise_card_switch"
                android:layout_width="46dp"
                android:layout_height="22dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="36dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:thumb="@drawable/selector_switch_thumb"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:switchMinWidth="46dp"
                app:track="@drawable/selector_switch_exercise_card" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</layout>