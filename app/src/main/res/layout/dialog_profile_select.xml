<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rounded_square_white_18dp">

    <TextView
        android:id="@+id/dialog_profile_select_title"
        style="@style/sub_title_bold_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="프로필 사진 설정"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_profile_select_bt1"
        style="@style/body_regular_14"
        android:layout_width="0dp"
        android:textAlignment="textStart"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="앨범에서 사진 선택"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/dialog_profile_select_title"
        app:layout_constraintTop_toBottomOf="@id/dialog_profile_select_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_profile_select_bt2"
        style="@style/body_regular_14"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginBottom="16dp"
        android:text="기본 이미지 선택"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/dialog_profile_select_bt1"
        app:layout_constraintTop_toBottomOf="@id/dialog_profile_select_bt1" />

</androidx.constraintlayout.widget.ConstraintLayout>