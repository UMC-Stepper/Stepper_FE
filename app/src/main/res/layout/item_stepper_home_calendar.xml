<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="40dp"
    android:layout_height="46dp">

    <TextView
        android:id="@+id/stepper_home_calendar_day_tv"
        style="@style/sub_title_medium_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="18dp"
        android:textAlignment="center"
        android:text=""
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stepper_home_calendar_dot_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="14dp"
        android:textAlignment="center"
        android:src="@drawable/ic_stepper_calendar_dot"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stepper_home_calendar_day_tv" />

    <ImageView
        android:id="@+id/stepper_home_calendar_icon_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="14dp"
        android:textAlignment="center"
        android:src="@drawable/ic_stepper_home_calendar_icon"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stepper_home_calendar_day_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>
