<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rounded_square_white_18dp">

    <TextView
        android:id="@+id/dialog_settings_out_page_title"
        style="@style/sub_title_semi_bold_16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="34dp"
        android:text="페이지에서 나가시면 작성하신\n정보는 저장되지 않습니다."
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.internal.BaselineLayout
        android:id="@+id/baseLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_settings_out_page_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_settings_out_page_button1_bt"
        style="@style/body_medium_14"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_rounded_square_gray_purple_bottom_left_18dp"
        android:text="나가기"
        app:layout_constraintEnd_toStartOf="@id/dialog_settings_out_page_button2_bt"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/baseLine" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_settings_out_page_button2_bt"
        style="@style/body_medium_14"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_rounded_square_gray_purple_bottom_right_18dp"
        android:text="계속 작성하기"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_settings_out_page_button1_bt"
        app:layout_constraintTop_toBottomOf="@id/baseLine" />

    <com.google.android.material.internal.BaselineLayout
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:foregroundTint="@color/Black_500"
        android:background="@color/Black_500"
        app:layout_constraintStart_toEndOf="@id/dialog_settings_out_page_button1_bt"
        app:layout_constraintEnd_toStartOf="@id/dialog_settings_out_page_button2_bt"
        app:layout_constraintTop_toBottomOf="@id/baseLine"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>