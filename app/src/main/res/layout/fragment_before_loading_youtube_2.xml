<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/fragment_before_loading_youtube_2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:text="Youtube 영상 URL을 복사해서 아래의 창에\n입력해주세요."
        android:textColor="@color/White"
        android:textSize="15dp"
        android:fontFamily="@font/pretendard_medium"/>
    <TextView
        android:id="@+id/fragment_before_loading_youtube_2_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*유튜브 URL 주소만 입력해주세요"
        android:textColor="@color/White"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@id/fragment_before_loading_youtube_2_title"
        app:layout_constraintTop_toBottomOf="@id/fragment_before_loading_youtube_2_title"
        android:layout_marginTop="4dp"/>

    <EditText
        android:id="@+id/fragment_before_loading_youtube_2_insert_link_et"
        android:background="@drawable/shape_rounded_square_register_field_20dp_stroke_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_before_loading_youtube_2_sub_title"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="72dp"/>

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/fragment_before_loading_youtube_2_youtube_player_yv"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_before_loading_youtube_2_insert_link_et"
        android:layout_marginTop="4dp"
        app:autoPlay="true" />
    <TextView
        android:id="@+id/fragment_before_loading_youtube_2_youtube_title_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/fragment_before_loading_youtube_2_youtube_player_yv"
        app:layout_constraintTop_toBottomOf="@id/fragment_before_loading_youtube_2_youtube_player_yv"
        android:text="영상제목"
        android:textColor="@color/White"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/fragment_before_loading_youtube_2_channel_title_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/fragment_before_loading_youtube_2_youtube_title_et"
        app:layout_constraintTop_toBottomOf="@id/fragment_before_loading_youtube_2_youtube_title_et"
        android:text="채널"
        android:textColor="@color/White"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/fragment_before_loading_youtube_2_thumbnail_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@id/fragment_before_loading_youtube_2_channel_title_et"
        app:layout_constraintTop_toTopOf="@id/fragment_before_loading_youtube_2_channel_title_et"
        app:layout_constraintBottom_toBottomOf="@id/fragment_before_loading_youtube_2_channel_title_et"
        android:src="@drawable/shape_image_input_circle"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="손재용의사생활"
        android:layout_marginStart="10dp"
        android:textColor="@color/White"
        app:layout_constraintStart_toEndOf="@id/fragment_before_loading_youtube_2_thumbnail_iv"
        app:layout_constraintTop_toTopOf="@id/fragment_before_loading_youtube_2_thumbnail_iv"
        app:layout_constraintBottom_toBottomOf="@id/fragment_before_loading_youtube_2_thumbnail_iv"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_square_yellow700_40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:text="추가 운동으로 추가하기"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textSize="15dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>