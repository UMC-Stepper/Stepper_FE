<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="ResultTimeData"
            type="com.example.umc_stepper.domain.model.Time" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Purple_Black">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_last_exercise_tag_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tool:listitem="@layout/item_tag" />

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/fragment_last_exercise_youtube_view_yv"
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_last_exercise_tag_rv" />

        <TextView
            android:id="@+id/fragment_last_exercise_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="45dp"
            android:text="하루 10분! 이석 자가 재활운동!"
            android:textColor="@color/White"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_last_exercise_youtube_view_yv" />

        <ImageView
            android:id="@+id/fragment_last_exercise_profile_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_image_input_circle"
            app:layout_constraintStart_toStartOf="@id/fragment_last_exercise_title_tv"
            app:layout_constraintTop_toBottomOf="@id/fragment_last_exercise_title_tv" />

        <TextView
            android:id="@+id/fragment_last_exercise_channel_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="손재용의사생활"
            android:textColor="@color/White"
            app:layout_constraintBottom_toBottomOf="@id/fragment_last_exercise_profile_iv"
            app:layout_constraintStart_toEndOf="@id/fragment_last_exercise_profile_iv"
            app:layout_constraintTop_toTopOf="@id/fragment_last_exercise_profile_iv" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:background="@color/Purple_Black_BG_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_last_exercise_channel_name_tv">


            <TextView
                android:id="@+id/fragment_last_exercise_success_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="오늘 이만큼  추가 운동했어요!"
                android:textColor="@color/White"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_last_exercise_time_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_last_exercise_success_title_tv">

                <TextView
                    android:id="@+id/fragment_last_exercise_success_hour_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="@{ResultTimeData.hour}"
                    android:textColor="@color/Purple_300"
                    android:textSize="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fragment_last_exercise_success_divider_1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text=":"
                    android:textColor="@color/Purple_300"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="@id/fragment_last_exercise_success_hour_tv"
                    app:layout_constraintStart_toEndOf="@id/fragment_last_exercise_success_hour_tv"
                    app:layout_constraintTop_toTopOf="@id/fragment_last_exercise_success_hour_tv" />

                <TextView
                    android:id="@+id/fragment_last_exercise_success_minute_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="@{ResultTimeData.minute}"
                    android:textColor="@color/Purple_300"
                    android:textSize="60dp"
                    app:layout_constraintBottom_toBottomOf="@id/fragment_last_exercise_success_divider_1_tv"
                    app:layout_constraintStart_toEndOf="@id/fragment_last_exercise_success_divider_1_tv"
                    app:layout_constraintTop_toTopOf="@id/fragment_last_exercise_success_divider_1_tv" />

                <TextView
                    android:id="@+id/fragment_last_exercise_success_divider_2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text=":"
                    android:textColor="@color/Purple_300"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="@id/fragment_last_exercise_success_minute_tv"
                    app:layout_constraintStart_toEndOf="@id/fragment_last_exercise_success_minute_tv"
                    app:layout_constraintTop_toTopOf="@id/fragment_last_exercise_success_minute_tv" />

                <TextView
                    android:id="@+id/fragment_last_exercise_success_second_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="@{ResultTimeData.second}"
                    android:textColor="@color/Purple_300"
                    android:textSize="60dp"
                    app:layout_constraintBottom_toBottomOf="@id/fragment_last_exercise_success_divider_2_tv"
                    app:layout_constraintStart_toEndOf="@id/fragment_last_exercise_success_divider_2_tv"
                    app:layout_constraintTop_toTopOf="@id/fragment_last_exercise_success_divider_2_tv" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <CheckedTextView
                android:id="@+id/fragment_last_exercise_reset_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/selector_time"
                android:fontFamily="@font/pretendard_semi_bold"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingTop="8dp"
                android:paddingEnd="24dp"
                android:paddingBottom="8dp"
                android:text="초기화"
                android:textColor="@color/Purple_400"
                app:layout_constraintEnd_toEndOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/fragment_last_exercise_time_cl" />

            <CheckedTextView
                android:id="@+id/fragment_last_exercise_start_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/selector_time"
                android:checked="true"
                android:fontFamily="@font/pretendard_semi_bold"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingTop="8dp"
                android:paddingEnd="24dp"
                android:paddingBottom="8dp"
                android:text="시작"
                android:textColor="@color/Purple_400"
                app:layout_constraintStart_toStartOf="@id/guideline_right"
                app:layout_constraintTop_toBottomOf="@id/fragment_last_exercise_time_cl"

                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/shape_rounded_square_yellow700_40dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="운동 완료"
            android:textColor="@color/Text_exercise_finish"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>