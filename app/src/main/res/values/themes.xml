<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UMC_Stepper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--<item name="colorPrimary">@color/my_light_primary</item> -->   <!-- 툴바 기본 색상 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/base_font</item>
        <item name="android:colorBackground">@color/Purple_Black_BG_1</item>

        <item name="android:buttonStyle">@style/Widget.AppTheme.Button</item>
        <item name="android:textViewStyle">@style/Widget.AppTheme.TextView</item>

        <!-- Status Bar (핸드폰 맨 위 부분 -> true: 검정, false: 흰색)  -->
        <item name="android:statusBarColor">@color/Purple_Black_BG_1</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <style name="Theme.UMC_Stepper" parent="Base.Theme.UMC_Stepper" />

    <!-- timePicker Spinner -->
    <style name="ThemeOverlay.NumberPicker" parent="Theme.UMC_Stepper">
        <!-- NumberPicker divider color -->
        <item name="colorControlNormal">@color/White</item>
        <item name="android:textColorPrimary">@color/White</item>
        <item name="android:elevation">4dp</item>
        <item name="android:outlineProvider">background</item>
    </style>

    <!-- fab -->
    <style name="FabShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">48dp</item> <!-- 원하는 모서리 반경을 설정합니다 -->
    </style>

    <!--  ImageView Style  -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- 버튼 ripple 효과 -->
    <style name="Widget.AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="Widget.AppTheme.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Splash  -->
